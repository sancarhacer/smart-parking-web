<section class="mt-3">
    <div class="container">
        <div class="card shadow-sm border-0">
            <div class="row g-0">

                <!-- üîµ SOL PANEL -->
                <div class="col-lg-2 d-none d-lg-block border-end">
                    <div class="p-3">
                        <h6 class="mb-3 text-muted">√ñnerilen Otoparklar</h6>

                        <nav class="nav nav-pills flex-column flex-nowrap overflow-auto"
                             id="recommendationList"
                             style="max-height: 450px;">
                            <div class="text-muted text-center mt-5">
                                Haritada bir nokta se√ß
                            </div>
                        </nav>
                    </div>
                </div>

                <!-- üü¢ SAƒû PANEL -->
                <div class="col-lg-10">
                    <div id="map-wrapper" style="height: 450px; position: relative;">

                        <!-- GOOGLE MAP -->
                        <div id="map" style="height:100%; width:100%;"></div>
                        <input id="placeSearch"
                            type="text"
                            class="form-control position-absolute top-0 start-0 mt-3 ms-3"
                            placeholder="Bir konum ara (√∂rn: X Hastanesi)"
                            style="width: 280px; z-index: 11;">

                        <!-- STATUS -->
                        <div id="status-label"
                             class="position-absolute top-0 end-0 mt-3 me-3 px-4 py-2 bg-white rounded-pill border shadow-sm fw-semibold"
                             style="z-index: 10;">
                            Bir nokta se√ßiniz
                        </div>

                        <!-- SEARCH BUTTON -->
                        <button id="searchBtn"
                                class="btn btn-success position-absolute bottom-0 start-50 translate-middle-x mb-3 px-4 py-2 rounded-pill d-none"
                                style="z-index: 10;">
                            Burada Otopark Ara
                        </button>

                        <!-- SLIDER -->
                        <div class="position-absolute top-0 start-50 translate-middle-x mt-3 bg-white rounded-pill px-3 py-2 shadow-sm"
                             style="z-index:10;">
                            <input type="range" id="walkSlider" min="2" max="20" value="10">
                            <span id="walkValue">10 dk</span>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

