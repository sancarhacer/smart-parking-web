        function updateFreeMap(lat, lng, parkId, element) {
            // 1. HaritayÄ± GÃ¼ncelle
            const url = `https://www.google.com/maps?q=${lat},${lng}&output=embed&z=16`;
            document.getElementById('free-park-frame').src = url;

            // 2. Durum Etiketini GÃ¼ncelle
            document.getElementById('status-label').innerText = "SeÃ§ili: " + parkId;

            // 3. RENK DEÄÄ°ÅTÄ°RME (Sadece tÄ±klananÄ± mor yap)
            // Ã–nce listedeki tÃ¼m nav-link'lerden 'active' sÄ±nÄ±fÄ±nÄ± Ã§Ä±kar
            const allLinks = document.querySelectorAll('.slider_nav .nav-link');
            allLinks.forEach(link => {
                link.classList.remove('active');
            });

            // Sadece Ã¼zerine tÄ±klanan (this/element) elemana 'active' sÄ±nÄ±fÄ±nÄ± ekle
            element.classList.add('active');
        }
        // Sayfa ilk aÃ§Ä±ldÄ±ÄŸÄ±nda ilk otoparkÄ± otomatik seÃ§
        window.onload = function() {
