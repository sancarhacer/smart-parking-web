@model List<RecommendedParking>

@{
    ViewData["Title"] = "Tüm Otoparklar";
  
    
}

<section class="mt-3">
    <div class="container">
        <div class="card shadow-sm border-0"> <div class="row g-0"> <div class="col-lg-3 d-none d-lg-block border-end"> 
                    <div class="p-3">
                        <h6 class="mb-3 text-muted">Otoparklar</h6>
                        <nav class="nav nav-pills flex-column flex-nowrap overflow-auto slider_nav" style="max-height: 400px;">
                            @foreach (var park in Model)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <a href="javascript:void(0);"
                                    class="nav-link flex-grow-1 border"
                                    onclick="updateFreeMap(@park.Latitude.ToString().Replace(",","."), 
                                                            @park.Longitude.ToString().Replace(",","."), 
                                                            '@park.ParkId', this)">
                                        <i class="fa-solid fa-square-p me-2"></i> @park.ParkId
                                    </a>

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <button class="btn btn-sm btn-outline-warning ms-2"
                                            onclick="addFavorite(
                                                '@park.ParkId',
                                                @park.Latitude,
                                                @park.Longitude,
                                                @park.OccupancyRatio
                                            )">
                                            <i class="fa fa-heart"></i>
                                        </button>
                                    }
                                </div>
                            }

                        </nav>
                    </div>
                </div>

                <div class="col-lg-9">
                    <div id="map-wrapper" style="height: 450px; position: relative;">
                        <iframe 
                            id="free-park-frame"
                            width="100%" 
                            height="100%" 
                            style="border:0;" 
                            src="about:blank">
                        </iframe>

                        <div id="status-label" style="position: absolute; top: 15px; right: 15px; background: rgba(255,255,255,0.9); padding: 8px 20px; border-radius: 50px; border: 1px solid #dee2e6; z-index: 10; font-weight: bold; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
                            Bir otopark seçiniz
                        </div>
                    </div>
                </div>

            </div> </div> </div> </section>

<section class="mt-4 mb-5">
    <div class="container">
        <h3 class="mb-4 text-primary text-center">Hizmetlerimiz</h3>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="~/img/ai.jpg" class="card-img-top" alt="Yapay Zeka">
                    <div class="card-body">
                        <h5 class="card-title">Yapay Zeka</h5>
                        <p class="card-text">Varış zamanınızda boş olacak park yerlerini yapay zekamızla tespit edin.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="~/img/parking.jpg" class="card-img-top" alt="Otopark">
                    <div class="card-body">
                        <h5 class="card-title">Anlık Doluluk</h5>
                        <p class="card-text">Otoparkların güncel doluluk oranlarını harita üzerinde canlı izleyin.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="~/img/Co2.jpg" class="card-img-top" alt="CO2">
                    <div class="card-body">
                        <h5 class="card-title">Çevre Dostu</h5>
                        <p class="card-text">Boş yer ararken harcadığınız yakıtı ve emisyonu minimuma indirin.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <script>

        function updateFreeMap(lat, lng, parkId, element) {
            // 1. Haritayı Güncelle
            const url = `https://www.google.com/maps?q=${lat},${lng}&output=embed&z=16`;
            document.getElementById('free-park-frame').src = url;

            // 2. Durum Etiketini Güncelle
            document.getElementById('status-label').innerText = "Seçili: " + parkId;

            // 3. RENK DEĞİŞTİRME (Sadece tıklananı mor yap)
            // Önce listedeki tüm nav-link'lerden 'active' sınıfını çıkar
            const allLinks = document.querySelectorAll('.slider_nav .nav-link');
            allLinks.forEach(link => {
                link.classList.remove('active');
            });

            // Sadece üzerine tıklanan (this/element) elemana 'active' sınıfını ekle
            element.classList.add('active');
        }
        // Sayfa ilk açıldığında ilk otoparkı otomatik seç
        window.onload = function() {
            const firstLink = document.querySelector('.slider_nav .nav-link');
            if(firstLink) firstLink.click();
        };

        function addFavorite(parkId, lat, lng, occupancy) {
    fetch('/Favorites/Add', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            parkId: parkId,
            latitude: lat,
            longitude: lng,
            occupancyRatio: occupancy,
            customName: ""
        })
    })
    .then(res => {
        if (res.ok) {
            alert("⭐ Favorilere eklendi");
        }
    });
}
    </script>
}